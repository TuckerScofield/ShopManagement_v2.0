@{
    Layout = "_Layout";

    var current = ViewContext.RouteData.Values["controller"]?.ToString();
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<ul class="nav nav-tabs mt-2 mb-3">
    <li class="nav-item">
        <a asp-action="Index" asp-controller="User"
           class="nav-link @Nav.Active("User", current)">
            Manage Users
        </a>
    </li>
    <li class="nav-item">
        <a asp-action="Index" asp-controller="Customer"
           class="nav-link @Nav.Active("Customer", current)">
            Manage Customers
        </a>
    </li>
    <li class="nav-item">
        <a asp-action="Index" asp-controller="Appointment"
           class="nav-link @Nav.Active("Appointment", current)">
            Manage Appointments
        </a>
    </li>
</ul>

@RenderBody()

